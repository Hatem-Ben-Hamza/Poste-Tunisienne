		<img src="{{ asset('assets/images/banners/timbre-bey.png') }}">
	</div>
</div>
<!-- ============== main slidesow .end // ============= -->

	</div> <!-- col.// -->
	<aside class="col-md-3">

<h6 class="title-bg bg-secondary"> Lorem Ipsum</h6>
